<section style="margin-left: 5%;" class="section">
    <div class="container">
        <h1 class="title is-2">Orders</h1>
        <span>
        <%= link_to  "Add New", new_order_path, class: "button is-link is-pulled-right ml-4 mb-5" %>
        <%= link_to  "Search", "searchorder", class: "button is-link is-pulled-right ml-4" %>
        <%= link_to  "Genrate Pdf", "searchpdf", class: "button is-link is-pulled-right mb-5" %>
        </span>
        <table class="table is-bordered is-striped is-fullwidth">
            <tr class="is-selected">
                <th>Name</th>
                <th>Product Type</th>
                <th>Quantity</th>
                <th>Order Type</th>
                <th>Buy/Sell</th>
                <th>Platform Price</th>
                <th>Client Price</th>
                <th>Date Time</th>
                <th>Completed</th>
                <th>In Account</th>
                <th>Actions</th>
            </tr>
            <% @orders.each do |order| %>
                <tr class="<%= 'is-order-completed' if order.finished == true %>">
                    <td>
                        <%= order.name %>
                    </td>
                    <td>
                        <%= order.producttype %>
                    </td>
                    <td>
                        <%= order.quantity %>
                    </td>
                    <td>
                        <%= order.ordertype %>
                    </td>
                    <td>
                        <%= order.buysell %>
                    </td>
                    <td>
                        <%= order.platform %>
                    </td>
                    <td>
                        <%= order.client %>
                    </td>
                    <td>
                        <%= order.time %> <br/>
                            <%= order.created_at.to_date %>
                    </td>
                    <td>
                        <%= order.finished == true ? "Yes" : "No" %>
                    </td>
                    <td>
                        <%= order.in_account == true ? "Yes" : "No" %>
                    </td>
                    <td>
                        <%= link_to edit_order_path(order) do %>
                            <span class="icon is-small mr-3">
              <i class="fa fa-edit"></i></span>
                            <% end %>
                                <%= link_to order_path(order), method: :delete, data: {confirm: "Are You Sure You Want To Delete ?"} do %>
                                    <span class="icon is-small"> <i class="fa fa-trash"></i></span>
                                    <% end %>
                    </td>
                </tr>
                <% end %>
        </table>
        <div class="digg_pagination">
        <%= will_paginate @orders, :container => false %>
        </div>
    </div>
</section>